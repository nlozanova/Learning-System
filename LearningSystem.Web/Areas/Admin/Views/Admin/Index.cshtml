@model LearningSystem.Models.ViewModels.Admin.AdminPageVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Panel";
}

<h2>Admin Panel</h2>

@Html.ActionLink("Add Course", "AddCourse", null, new { @class = "btn btn-lg btn-success" })
<br />
<br />
<div class="row">
    <div class="col-sm-5 table-bordered">
        <h3>Courses</h3>
        @foreach (var course in Model.Courses)
        {
            <div class="admin-course">
                <h4>@Html.DisplayFor(m => course.Name)</h4>
                @Html.ActionLink("Edit", "EditCourse", new { id = course.Id }, new { @class = "btn btn-md btn-warning" })
            </div>
        }
    </div>
    <div class="col-sm-5 table-bordered col-lg-offset-1">
        <h3>Users</h3>
        @foreach (var user in Model.Users)
        {
            <div class="admin-user">
                <h4>@Html.DisplayFor(m => user.Name )</h4>
                @Html.ActionLink("Edit", "EditUser", new { id = user.Id }, new { @class = "btn btn-md btn-warning" })
            </div>
        }
    </div>
</div>
