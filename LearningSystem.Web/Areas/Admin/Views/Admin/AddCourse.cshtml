@model LearningSystem.Models.ViewModels.Admin.AdminAddEditCourseVM
@{
    ViewBag.Title = "Add Course";
}

<h2>Add Course</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Trainers )
        @Html.DropDownListFor(vm => vm.TrainerId, Model.Trainers, new { @class = "form-control" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.StartDate)
        @Html.EditorFor(vm => vm.StartDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.EndDate)
        @Html.EditorFor(vm => vm.EndDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Description)
        @Html.TextAreaFor(vm => vm.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="form-control" />
    </div>

}