@model LearningSystem.Models.ViewModels.Admin.AdminEditUserVM

@{
    ViewBag.Title = "Edit User";
}

<h2>Edit User</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
        @Html.HiddenFor(Model => Model.Id)
    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.BirthDate)
        @Html.EditorFor(vm => vm.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="form-control" />
    </div>

}